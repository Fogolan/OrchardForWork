@{
    var name = (string) Model.Name;
    var author = (string) Model.Author;
    var year = (int) Model.Year;
    var bookId = Model.Id;
    Script.Require("TestApi.RefreshToken");
    Script.Require("TestApi.AddToCart");
}
<article>
    Name: @name<br />
    Author: @author <br/>
    Year: @year
    <footer>
        <button class="addBook" id="@bookId">@T("Add to cart")</button>
    </footer>
</article>